# Environment Variables Template
# Copy this file to .env and fill in your API keys

# ElevenLabs API Key (for TTS) - Get yours from https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Groq API Key (for intent parsing) - Get yours from https://groq.com
GROQ_API_KEY=your_groq_api_key_here

# Optional: Custom settings
DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # ElevenLabs voice ID
BROWSER_HEADLESS=false  # Set to true for headless mode
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Note: Google Speech Recognition is FREE and doesn't need API keys!
